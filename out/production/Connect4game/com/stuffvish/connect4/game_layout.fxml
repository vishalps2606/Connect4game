<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:id="rootGridPane" style="-fx-background-color: #D9F7F0;" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stuffvish.connect4.Controller">
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0"/>
        <RowConstraints/>
    </rowConstraints>
    <Pane GridPane.columnSpan="2"/>
    <Pane fx:id="insertedDiscPane" prefHeight="400.0" prefWidth="200.0" GridPane.rowIndex="1"/>
    <VBox style="-fx-background-color: #2B3B4C;" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <TextField fx:id="playerOneTextField" promptText="Enter Player One Name"
                   style="-fx-focus-traversable: false;"/>
        <TextField fx:id="playerTwoTextField" promptText="Enter Player Two Name"
                   style="-fx-focus-traversable: false;"/>
        <Button fx:id="setNamesButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="200.0" text="Set Names">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Button>
        <Region layoutX="10.0" layoutY="160.0" prefHeight="118.0" prefWidth="200.0"/>
        <Label fx:id="playerNameLabel" alignment="CENTER" prefHeight="35.0" prefWidth="178.0" text="Player One"
               textFill="WHITE">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
        <Label fx:id="turnLabel" alignment="CENTER" prefHeight="35.0" prefWidth="183.0" text="Turn"
               textFill="WHITE">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <Region prefHeight="199.0" prefWidth="200.0" VBox.vgrow="ALWAYS"/>
    </VBox>
</GridPane>
